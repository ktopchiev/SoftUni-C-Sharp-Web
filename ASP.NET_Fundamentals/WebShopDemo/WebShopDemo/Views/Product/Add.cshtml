@using WebShopDemo.Core.Models
@model ProductDto

<form asp-controller="Product" asp-action="Add" method="post" class="col-6 offset-3">
	 <div class="row justify-content-center">
		<label asp-for="Name"></label>
		<input asp-for="Name" type="text" class="form-control" placeholder="John Doe" />
		 <span asp-validation-for="Name" class="small text-danger"></span>
	 </div>
	<div class="row justify-content-center">
		<label asp-for="Price"></label>
		<input asp-for="Price" class="form-control" />
		<span asp-validation-for="Price" class="small text-danger"></span>
	</div>
	<div class="row justify-content-center">
		<label asp-for="Quantity"></label>
		<input asp-for="Quantity" class="form-control" />
		<span asp-validation-for="Quantity" class="small text-danger"></span>
	</div>
	<button type ="submit" class="btn btn-primary mt-2 float-end">Submit</button>
</form>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}