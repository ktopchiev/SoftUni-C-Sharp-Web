@{
    ViewBag.Title = "NumbersToN";
}

<h2>@ViewBag.Message</h2>
<ul>
    @for (int i = 1; i <= ViewBag.Number; i++)
    {
        <li>@i</li>
    }
</ul>
<form method="post">
    <input name="number" value="@ViewBag.Number" />
    <button type="submit">Submit</button>
</form>